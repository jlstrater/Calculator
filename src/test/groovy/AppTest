import spock.lang.Shared
import spock.lang.Specification

class AppTest extends Specification {

    @Shared
    Calculator app = new Calculator()

    def setupSpec() {
        Calculator.metaClass.static.getNextInt = { 1 }
    }

    def 'test initInput'() {

        when:
        Integer c = app.calculation(2)

        then:
        c == 2
    }
}